             xmlns:fonts="clr-namespace:Mal.XF.Infra.Fonts;assembly=Mal.XF.Infra"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Mal.XF.Infra.DevApp.Pages.LazyListView.LazyListViewPage"
             Title="Lazy ListView">
